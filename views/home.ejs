    crossorigin="anonymous"
  ></script>

  <script>
    $(window).scroll(function () {

        var scrolltop = $(this).scrollTop();

        if (scrolltop > 1) {
            $('#navbar').css('padding', '0 16px')
        }
        else {
            $('#navbar').css('padding', '16px')
        }


    });


</script>
  <script>
    var myVar;
    

    
    $(document).ready(function() { // พอ DOM โหลดเสร็จ -> รัน document.ready -> พอรูป และ Element อื่น ๆโหลดเสร็จ -> รัน window.onload 
    setTimeout(() => {
      document.getElementById("loader").style.display = "none";
    document.getElementById("loadedPage").style.display = "block";
    }, 100)
    
});


    </script>

</html>
