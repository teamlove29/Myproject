  <title>ประวัติเข้าร่วมกิจกรรม</title>

  <!-- Custom fonts for this template-->
  <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

  <!-- Page level plugin CSS-->
  <link href="vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

  <!-- Custom styles for this template-->
  <link href="css/sb-admin.css" rel="stylesheet">
  <link href="css/style.css" rel="stylesheet">
</head>

<body id="page-top"  id="loadedPage" onload="myFunction()">
  <div id="loader"></div>
  <div id="wrapper">
    <div id="content-wrapper">
      <div class="container">
  

<div style="display:none;" id="loadedPage" class="animate-bottom">
  <h4>ประวัติเข้าร่วมกิจกรรม</h4> 
<div class="table-responsive">
  <table  class="table table-bordered" id="dataTable"  width="100%" cellspacing="0">
      <thead class="thead-light">
          <tr>
            <th class="text-center">ลำดับ</th>
            <th class="text-center">วัน/เดือน/ปี</th>
              <th class="text-center">กิจกรรม</th>
              <th class="text-center">คะแนน</th>
          </tr>
      </thead>
      <tbody>
        <% if(listActivityUser != ''){  %>
        <% listActivityUser.map((value,index) => {    %>
  <tr>
    <%  
    var dd = value.actDate.getDate() 
    var mm = value.actDate.getMonth() + 1
    var yyyy = value.actDate.getFullYear()
    if (dd < 10) {
      dd = '0' + dd;
    } 
    if (mm < 10) {
      <!-- mm = '0' + mm; -->
    } 

    const monthArray = ["","มกราคม","กุมภาพันธ์","มีนาคม","เมษายน","พฤษภาคม","มิถุนายน","กรกฎาคม","สิงหาคม","กันยายน","ตุลาคม","พฤศจิกายน","ธันวาคม"] 
    mm = monthArray[mm]
   var today = dd + ' ' + mm + ' ' + yyyy; %>
    <td class="text-center"><%= index +1 %></td>
    <td class="text-center"><%= today %></td>
    <td class="text-center"><%= value.actName %></td>
    <td class="text-center"><%= value.actScore %></td>
</tr>

<%})%>
<% }else { %>

  <tr>
    <td class="text-center" colspan="6">----- ไม่มีข้อมูล -----</td>
</tr>
<% } %>
      </tbody>
  </table>
</div>
<p class="lead text-center mt-5">กลับหน้าหลัก
  <a href="/home">คลิ๊ก</a>
</div>

      <!-- /.container-fluid -->

    </div>
    <!-- /.content-wrapper -->

  </div>
  <!-- /#wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

<%- include('../../component/admin/scriptJs')%>

</body>
</html>
