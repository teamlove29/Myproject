        <div class="card card-register mx-auto mt-5">
            <% if(data.err == true) { %>
          <div class="<%= data.cls %>" role="alert">
            <div class="form-inline">
            <img class="mr-3 mb-2" width="150"  height="200" src="/uploads/<%= data.image %>" alt=""> 
            ชื่อ : <%= data.name %>  <br>
            รหัสประจำตำแหน่ง : <%= data.code %> <br>
