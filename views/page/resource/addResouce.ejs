<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
      <!-- Custom fonts for this template-->
  <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  <!-- Custom styles for this template-->
  <link href="/css/sb-admin.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
    <title>เพิ่มทรัพยากร</title>
</head>


<body id="page-top"  id="loadedPage" onload="myFunction()">
  <div id="loader"></div>
    <%- include('../../component/admin/navbar')%>
 
   <div id="wrapper">
 
     <!-- Sidebar -->
     <%- include('../../component/admin/sidebar.ejs')%>
 
     <div id="content-wrapper">
       <div class="container-fluid">



        <% if (data.isEdit === true) { 
          resource.map(value => { %>

         <!-- Breadcrumbs edit -->
         <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="/ManagerResource">จัดการทรัพยากร</a>
          </li>
          <li class="breadcrumb-item active">แก้ไขทรัพยากร</li>
        </ol>

 <!-- DataTables Example edit -->
 <div style="display:none;" id="loadedPage" class="animate-bottom">
 <div class="container">
  <div class="card card-register mx-auto mt-5">
    <div class="card-header">แก้ไขทรัพยากร</div>
    <div class="card-body">
      <form action="/ManagerResource/editresource/<%= value.resId %>" method="POST">
        <div class="form-group">
          <div class="form-row">
            <div class="col-md-6">
              <div class="form-label-group">
                <input 
                minlength="5"
                maxlength="30"
                pattern="[a-zA-Zก-ุฯ-๙\s-9]*"
                value="<%= value.resName %>" type="text" name="name" id="name" class="form-control" placeholder="ชื่อกิจกรรม" required="required" title="ห้ามใส่ตัวอักษรพิเศษ" >
                <label for="name">ชื่อทรัพยากร</label>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-label-group">
                <input 
                min="0"
                attern="[0-9]*"
                value="<%= value.resAmount %>" type="text" name="amount" id="amount" class="form-control" placeholder="วันที่จัดกิจจกรม" required="required" title="กรอกข้อมูลเป็นตัวเลขเท่านั้น" readonly>
                <label for="amount">จำนวน</label>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="form-label-group">
            <textarea 
              maxlength="255"
            type="textarea" name="detail" id="detail" class="form-control" required="required"><%= value.resDetail %></textarea>
          </div>
        </div>
        <button type="submit" class="btn btn-success">แก้ไข</button>
      </form>
    </div>
    </div>
  </div>
</div>
<!-- /.container-fluid edit-->



           <% })} else {%>

         <!-- Breadcrumbs edit -->
         <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="/ManagerResource">จัดการทรัพยากร</a>
          </li>
          <li class="breadcrumb-item active">เพิ่มทรัพยากร</li>
        </ol>

 <!-- DataTables Example add -->
 <div style="display:none;" id="loadedPage" class="animate-bottom">
 <div class="container">
  <div class="card card-register mx-auto mt-5">
    <div class="card-header">+เพิ่มทรัพยากร</div>
    <div class="card-body">
      <form action="/addresource" method="POST">
        <div class="form-group">
          <div class="form-row">
            <div class="col-md-6">
              <div class="form-label-group">
                <input 
                minlength="5"
                maxlength="30"
                pattern="[a-zA-Zก-ุฯ-๙\s0-9]*"
                value="" type="text" name="name" id="name" class="form-control" placeholder="ชื่อกิจกรรม" required="required"  title="ห้ามใส่ตัวอักษรพิเศษ" autofocus>
                <label for="name">ชื่อทรัพยากร</label>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-label-group">
                <input
                min="0"
                pattern="[0-9]*"
                value="" type="text" name="amount" id="amount" class="form-control" placeholder="วันที่จัดกิจจกรม" required="required" title="กรอกข้อมูลเป็นตัวเลขเท่านั้น">
                <label for="amount">จำนวน</label>
              </div>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="form-row">
            <div class="col-md-4">
              <select name="status" id="status" class="form-control" required>
                <option value="0">สิ้นเปลือง</option>
                <option value="1">ต้องคืนเท่านั้น</option>
              </select>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="form-label-group">
            <textarea
              maxlength="255"
            type="textarea" name="detail" id="detail" class="form-control" placeholder="รายละเอียดทรัพยากร" required="required"></textarea>
          </div>
        </div>
        <button type="submit" class="btn btn-success">บันทึก</button>
        <button type="reset" class="btn btn-secondary">เคลียร์</button>
      </form>
    </div>
    </div>
  </div>
</div>
<!-- /.container-fluid add-->
<% } %>

       <!-- Sticky Footer -->
       <footer class="sticky-footer">
         <div class="container my-auto">
           <div class="copyright text-center my-auto">
             <span>powered by Marutthep Rompho Sotfware lpru</span>
           </div>
         </div>
       </footer>
 
     </div>
     <!-- /.content-wrapper -->
 
   </div>
