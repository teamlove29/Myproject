<body id="page-top"  id="loadedPage" onload="myFunction()">
  <div id="loader"></div>
   <%- include('../../component/admin/navbar')%>

  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('../../component/admin/sidebar')%>

    <div id="content-wrapper">

      <div class="container-fluid">

        <!-- Breadcrumbs-->
        <ol class="breadcrumb">
          <li class="breadcrumb-item">
            <a href="/ManagerActivity">จัดการงานกิจกรรม</a>
          </li>
          <li class="breadcrumb-item active">กิจกรรม<%= nameActivity[0].actName %></li>
        </ol>
        <div style="display:none;" id="loadedPage" class="animate-bottom">
        <!-- DataTables Example -->
        <div class="text-center">
          <%  
          var dd = nameActivity[0].actDate.getDate() 
          var mm = nameActivity[0].actDate.getMonth() + 1
          var yyyy = nameActivity[0].actDate.getFullYear()
          if (dd < 10) {
            dd = '0' + dd;
          } 
          if (mm < 10) {
            <!-- mm = '0' + mm; -->
          } 

          const monthArray = ["","มกราคม","กุมภาพันธ์","มีนาคม","เมษายน","พฤษภาคม","มิถุนายน","กรกฎาคม","สิงหาคม","กันยายน","ตุลาคม","พฤศจิกายน","ธันวาคม"] 
          mm = monthArray[mm]
         var today = dd + ' ' + mm + ' ' + yyyy;
      %>
            <h3>กิจกรรม <%= nameActivity[0].actName %></h3>
            <p>วันเริ่มกิจกรรม <%= today %></p>
            <p>จำนวนผู้เข้าร่วม <%= listJoin.length %> คน</p>
        </div>

        <div class="table-responsive">
          <table class="table-sm table table-striped table-sm" width="100%" cellspacing="0">
              <thead>
                  <tr>
                      <th>#</th>
                      <th>รหัสผู้เข้าร่วมอบรม</th>
                      <th>ชื่อ- สกุล</th>
                      <th>พื้นที่</th>
                      <th></th>
                  </tr>
              </thead>
              <tbody>
                  <% if(listJoin != '') { %>
                  <% listJoin.map((value, index) => {  %>
                  <tr>
                      <td><%= index+1 %></td>
                      <td><%= value.userPosition %></td>
                      <td><%= value.userFname + ' ' +value.userLname %></td>
                      <td><%= value.userArea %></td>
                      <td>
      
                          <button onclick="return ConfirmDelete(<%= value.regId %>,<%= value.userId %>,<%= value.actId %>)"
                              class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></button>
                      </td>
                  </tr>
                  <% })}else{ %>
                  <tr>
                      <td class="text-center" colspan="5">----- ไม่มีข้อมูล -----</td>
                  </tr>
                  <% } %>
              </tbody>
          </table>
      </div>
      <hr class="mb-5 mt-5">
      <div id="msg" class="" role="alert">
        </div>
      <h4>ทรัพยากรที่ในกิจกรรมนี้</h4>
      <div class="table-responsive">
          <table class="table table-striped table-sm" width="auto" cellspacing="0">
              <thead>
                  <tr>
                      <th>#</th>
                      <th>ทรัพยากร</th>
                      <th>จำนวนที่เบิก</th>
                      <th>จำนวนที่คืน</th>
                      <th>ผู้รับผิดชอบ</th>
                      <th></th>
                  </tr>
              </thead> 
              <tbody>
                  <% if(listResouce != '') { %>
                  <%  listResouce.map((value, index) => {  %> 
                  <tr>
                      <td><%= index+1 %></td>
                      <td><%= value.resName %>    
                        <% if(value.resStatus == '1' ) { %>
                        <span class="text-danger"> (*ต้องคืน)</span>
                        <!-- <button 
                        onclick="return ConfirmLoss(<%= value.resId %>,<%= value.actId %>,<%= value.total %>, <%= resturnRe %>)"
                        class="btn btn-sm btn-warning">สูญหาย -->
                          <% } %></td>
                      <td><%= value.total %></td>
                      
                      <% var resturnRe,i=0 %>
                      <%  listResouceRe.map( valueRe => {  %> 
                        <%  if(value.resName == valueRe.resName) { %>
                      <td><%= valueRe.total %></td>
                      <%  resturnRe = [value.resName == valueRe.resName  ? valueRe.total : 0] }else { i += 1 } %>
                      
                    <% }) %>
                    <% var resturnRe  %>
                    <% if(i == listResouceRe.length) { %>
                          <td> 0 </td>
                          <% resturnRe = 0 %>
                      <%   } %>
                          <td >
                            <a class="btn btn-sm btn-outline-info text-info" data-toggle="modal" data-target="#ModalShowImage<%= index%>">
                               <%= value.userFname + ' ' + value.userLname %> 
                          </a>
                        </td>


                  <!-- Modal -->
                  <div class="modal fade" id="ModalShowImage<%= index %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="exampleModalLongTitle">คุณ <%= value.userFname + ' ' + value.userLname%></h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>
                        <div class="modal-body">
                          <div class="card text-center">
                            <img class="align-self-center" src="/uploads/<%= value.userImage %>" alt="image" style="width:50%">
                            <h4 class="mt-3"><%= value.userFname + ' ' + value.userLname%></h4>
                            <p class="mt-2">รหัส : <%= value.userPosition%></p>
                            <p class="title">นามเรียกขาน : <%= value.userArea %></p> 
                            <p class="title">เบอร์โทรติดต่อ : ว่าง </p> 
                            </div>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary btn-sm btn-block" data-dismiss="modal">ปิดหน้าต่าง</button>
                        </div>
                      </div>
                    </div>
                  </div>


                  

                      <td>
                          <button onclick="return ConfirReturn(<%= value.resId %>,<%= value.actId %>,<%= value.total %>, <%= resturnRe %>,<%= value.userId %>)"
                              class="btn btn-sm btn-secondary mr-2">คืนทรัพยากร </button>
                           
                      </td>
                      
                  </tr>
                  <% })} else{  %>
                  <tr>
                      <td class="text-center" colspan="5">----- ไม่มีข้อมูล -----</td>
                  </tr>
                  <% } %>
              </tbody>
          </table>
      </div>
    </div>
      <!-- /.container-fluid -->

      <!-- Sticky Footer -->
      <footer class="sticky-footer">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span>powered by Marutthep Rompho Sotfware lpru</span>
          </div>
        </div>
      </footer>

    </div>
    <!-- /.content-wrapper -->

  </div>
  <!-- /#wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>



