    <form action="/ManagerActivity/editactivity/<%= value.actId %>" method="POST">
      <div class="form-group">
        <div class="form-row">
          <div class="col-md-12">
            <div class="form-label-group">
              <input 
              maxlength="30"
              pattern="[a-zA-Zก-ุฯ-๙\s0-9()]*"
              value="<%= value.actName %>" type="text" name="name" id="name" class="form-control" placeholder="ชื่อกิจกรรม" required="required" autofocus="autofocus" title="ห้ามกรอกตัวอักษรพิเศษ">
              <label for="name">ชื่อกิจกรรม</label>
            </div>
          </div> 
        </div>
      </div>
      <div class="form-group row">
        <div class="col-md-6">
          <div class="form-label-group">
            <input value="<%= value.actDate.toISOString().slice(0,10).replace(/-/g,"-")%>" type="date" name="date" id="date" class="form-control" placeholder="วันที่จัดกิจจกรม" required="required">
            <label for="date">วันเริ่มกิจกรรม</label>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-label-group">
            <input value="<%= value.actEnd.toISOString().slice(0,10).replace(/-/g,"-")%>" type="date" name="dateEnd" id="dateEnd" class="form-control" placeholder="วันที่สิ้นสุดกิจกรรม" required="required">
